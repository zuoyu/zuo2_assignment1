<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.counter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.counter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.counter.NewCounter"
            android:label="@string/title_activity_new_counter" >
        </activity>
        <activity
            android:name="com.example.counter.CounterIncrease"
            android:label="@string/title_activity_counter_increase" >
        </activity>
        <activity
            android:name="com.example.counter.ViewList"
            android:label="@string/title_activity_view_list" >
        </activity>
        <activity
            android:name="com.example.counter.ReName"
            android:label="@string/title_activity_re_name" >
        </activity>
        <activity
            android:name="com.example.counter.RemoveCounter"
            android:label="@string/title_activity_remove_counter" >
        </activity>
        <activity
            android:name="com.example.counter.ClearAll"
            android:label="@string/title_activity_clear_all" >
        </activity>
        <activity
            android:name="com.example.counter.ResultView"
            android:label="@string/title_activity_result_view" >
        </activity>
    </application>

</manifest>
