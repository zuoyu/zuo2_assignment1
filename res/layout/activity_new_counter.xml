<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NewCounter" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="New Counter"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp" />
    
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="#ffff00" />

    <AnalogClock
        android:id="@+id/analogClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameed"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bbb"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="BACK" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameed"
        android:layout_alignBottom="@+id/nameed"
        android:layout_alignParentLeft="true"
        android:text="Username:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bbb"
        android:layout_alignBottom="@+id/bbb"
        android:layout_toLeftOf="@+id/analogClock1" />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <Button
        android:id="@+id/addb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/display"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="26dp"
        android:text="ADD"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nameed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delb"
        android:layout_marginBottom="16dp"
        android:layout_toLeftOf="@+id/bbb"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/search"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameed"
        android:layout_alignBottom="@+id/nameed"
        android:layout_alignParentRight="true"
        android:text="CHECK"
        android:textSize="8sp" />

    <Button
        android:id="@+id/delb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addb"
        android:layout_alignBottom="@+id/addb"
        android:layout_alignParentRight="true"
        android:text="ViewList"
        android:textSize="18sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delb"
        android:layout_toLeftOf="@+id/nameed"
        android:text="Reset" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

</RelativeLayout>